<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.techbros.myproject.viewModel.PatientDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/android:colorBackground">

        <!-- App Bar with Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorSurface"
                app:titleTextColor="?attr/colorOnSurface"
                app:navigationIconTint="?attr/colorOnSurface" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Patient Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient Information"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="20dp"
                            android:text="Enter patient details below"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <!-- Name Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputName"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Patient Name"
                            app:startIconDrawable="@drawable/baseline_person_24"
                            app:startIconTint="?attr/colorPrimary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.name}"
                                android:textColor="?attr/colorOnSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Age Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputAge"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Age"
                            app:startIconDrawable="@drawable/baseline_calendar_24"
                            app:startIconTint="?attr/colorPrimary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="@={viewModel.age}"
                                android:textColor="?attr/colorOnSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Gender Dropdown -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputGender"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Gender"
                            app:startIconDrawable="@drawable/baseline_wc_24"
                            app:startIconTint="?attr/colorPrimary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/filled_exposed_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/colorOnSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Tooth Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputOtherDetails"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Selected Tooth"
                            app:startIconDrawable="@drawable/baseline_dental_24"
                            app:startIconTint="?attr/colorPrimary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etOtherDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.otherDetails}"
                                android:textColor="?attr/colorOnSurface" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Tooth Selection Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Tooth"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:text="Tap on the tooth diagram to select"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <WebView
                            android:id="@+id/webView"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:background="?attr/colorSurface" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Instructions Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/tvInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_info_24"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Click here to read imaging instructions"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_chevron_right_24"
                            app:tint="?attr/colorPrimary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Continue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="Continue to Camera"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/baseline_photo_camera_24"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
