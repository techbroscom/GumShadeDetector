<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="test"
            type="com.techbros.myproject.model.Test" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Patient Icon -->
            <ImageView
                android:id="@+id/ivPatientIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_person_24"
                android:background="@drawable/circle_background"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:padding="12dp"
                app:tint="?attr/colorOnPrimaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Test Name -->
            <TextView
                android:id="@+id/tvTestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text='@{test.name != null ? test.name : "Name not available"}'
                tools:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toEndOf="@id/ivPatientIcon"
                app:layout_constraintTop_toTopOf="@id/ivPatientIcon"
                app:layout_constraintEnd_toStartOf="@id/ivChevron" />

            <!-- Test Details (Age and Gender) -->
            <TextView
                android:id="@+id/tvTestDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text='@{(test.age != null || test.gender != null) ? test.age + " yrs • " + test.gender : "Details not available"}'
                tools:text="30 yrs • Male"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toEndOf="@id/ivPatientIcon"
                app:layout_constraintTop_toBottomOf="@id/tvTestName"
                app:layout_constraintEnd_toStartOf="@id/ivChevron" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?attr/colorOutline"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPatientIcon" />

            <!-- Shade Label -->
            <TextView
                android:id="@+id/tvShadeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Shade"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <!-- Test Shade -->
            <TextView
                android:id="@+id/tvTestShade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text='@{test.shade != null ? test.shade : "Not specified"}'
                tools:text="G3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvShadeLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Remarks Label -->
            <TextView
                android:id="@+id/tvRemarksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Remarks"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTestShade" />

            <!-- Test Remarks -->
            <TextView
                android:id="@+id/tvTestRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text='@{test.remarks != null ? test.remarks : "No remarks"}'
                tools:text="Sample looks good"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRemarksLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Chevron Icon -->
            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="?attr/colorOnSurfaceVariant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivPatientIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
