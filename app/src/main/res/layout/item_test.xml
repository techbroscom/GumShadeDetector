<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="test"
            type="com.techbros.myproject.model.Test" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/btn_pink_bg"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Test Name -->
            <TextView
                android:id="@+id/tvTestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{test.name != null ? test.name : "Name not available"}'
                tools:text="John Doe"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Test Details (Age and Gender) -->
            <TextView
                android:id="@+id/tvTestDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{(test.age != null || test.gender != null) ? "Age: " + test.age + ", Gender: " + test.gender : "Details not available"}'
                tools:text="Age: 30, Gender: Male"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTestName"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Test Shade -->
            <TextView
                android:id="@+id/tvTestShade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{test.shade != null ? "Shade: " + test.shade : "Shade not specified"}'
                tools:text="Shade: Light Blue"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTestDetails"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Test Remarks -->
            <TextView
                android:id="@+id/tvTestRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{test.remarks != null ? "Remarks: " + test.remarks : "No remarks"}'
                tools:text="Remarks: Sample looks good"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTestShade"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
